<!DOCTYPE html>
<html lang="en">
    <%- include("../../partials/header.ejs") %>
<body class="admin-page">

    <%- include("../../partials/nav.ejs") %>
    <h1 class="title-text">Member Management</h1>


    <section class="form-container add-form" hidden>
        <h2>Add new member</h2>
        <form action="">
            <label >Name</label>
            <input id="add-full-name" type="text" placeholder="full name">
            <label>First Name</label>
            <input id="add-first-name" type="text" placeholder="First Name">
            <label>Last Name</label>
            <input id="add-last-name" type="text" placeholder="Last Name">
            <label>Role</label>
            <input id="add-role" type="text" placeholder="Role">
            <label>Member Number</label>
            <input id="add-member-number" type="text" placeholder="#">
            <label>Status</label>
            <input id="add-status" type="text" placeholder="status" >
            <button class="form-submit btn" type="submit">Submit New Member</button>
        </form>
    </section>

    <ul class="fetch-view-results  table-container">
        <ul class="data-buttons table-options">
            <li><button class="fetch-view-btn btn">Refresh</button></li>
            <li><button id="fetch-add-btn" class="btn">Add</button></li>
        </ul>
            <li class="table-header">
                <ul>
                    <li>Name</li>
                    <li>Member #</li>
                    <li>Role</li>
                </ul>
                <ul class="table-filter">
                    <li><input type="text" placeholder="filter name"></li>
                    <li><input type="text" placeholder="filter #"></li>
                    <li><input type="text" placeholder="filter role"></li>
                </ul>
            </li>
    </ul>

    <section class="view-modal-container hide"> 
        <div class="view-modal-inner">
            <button class="btn view-modal-close-btn">X</button>
            <div class="view-modal-header">
                <h2>Modal Title</h2>
            </div>
            <div class="view-modal-body">
                <form action="">
                    <label >Name</label>
                    <input id="view-full-name" type="text" placeholder="full name" disabled>
                    <label>First Name</label>
                    <input id="view-first-name" type="text" placeholder="First Name" disabled>
                    <label>Last Name</label>
                    <input id="view-last-name" type="text" placeholder="Last Name" disabled>
                    <label>Role</label>
                    <input id="view-role" type="text" placeholder="Role" disabled>
                    <label>Member Number</label>
                    <input id="view-member-number" type="text" placeholder="#" disabled>
                    <label>Status</label>
                    <input id="view-status" type="text" placeholder="status"  disabled>
                    <button class="btn edit-btn view-edit-button">Edit</button>
                    <button class="btn edit-confirm-btn view-edit-confirm-btn hide" disabled>Confirm Edit</button>
                    <button class="btn delete-btn view-delete-button">Delete</button>
                </form>
            </div>
            <div class="view-modal-footer">

            </div>

        </div>
    </section>


    <script type="text/javascript" src="../js/member.js"></script>
</body>
</html>