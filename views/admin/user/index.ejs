    <input type="checkbox" id="modal" class="modal-toggle" />
    <div class="modal">
        <div class="modal-box relative bg-slate-600">
            <label for="modal" id="view-modal-close-btn" class="btn btn-sm btn-circle absolute right-2 top-2">âœ•</label>
            <h3 class="text-lg font-bold">User</h3>
            <p class="py-4">Update user records</p>

            <div class="view-modal-body">
                <form action="" class="grid grid-cols-2 gap-2">
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Name</span>
                            <input type="text" name="name" id="view-name" class="input input-bordered" disabled />
                        </label>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Email</span>
                            <input type="email" name="role" id="view-email" class="input input-bordered" disabled />
                        </label>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Verified</span>
                            <input type="checkbox" name="verified" id="view-verified" class="checkbox" disabled />
                            <span></span>
                        </label>
                    </div>


                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Theme</span>
                            <select class="select select-bordered" name="view-theme" id="view-theme" disabled>
                                <option value="light">Light</option>
                                <option value="dark">Dark</option>
                            </select>
                        </label>
                    </div>

                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Member Number</span>
                            <input type="number" name="memberNumber" id="view-memberNumber" class="input input-bordered" disabled />
                        </label>
                    </div>

                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Date</span>
                            <input type="date" name="date" id="view-date" class="input input-bordered" disabled />
                        </label>
                    </div>

                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Role</span>
                            <select class="select select-bordered" name="view-role" id="view-role" disabled>
                                <option value="admin">Admin</option>
                                <option value="member">Member</option>
                            </select>
                        </label>
                    </div>


                        <button class="btn hidden col-span-2" id="form-submit" type="submit">Submit New Member</button>
                        <button class="btn edit-btn view-edit-button">Edit</button>
                        <button class="btn edit-confirm-btn view-edit-confirm-btn hidden" disabled>Confirm Edit</button>
                        <button class="btn delete-btn view-delete-button">Delete</button>
                   
                </form>
            </div>
        </div>
    </div>
