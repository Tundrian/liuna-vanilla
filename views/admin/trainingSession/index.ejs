<!DOCTYPE html>
<html lang="en">
    <%- include("../../partials/header.ejs") %>
<body class="admin-page">

    <!-- Navbar -->
    <%- include("../../partials/navAdmin.ejs") %>
    
    <!-- Title -->
    <h1 class="title-text text-5xl text-center text-slate-300 bg-slate-800 pt-28 pb-5">Member Management</h1>

    <div class="overflow-x-auto m-10 h-screen overflow-y-auto ">
        <ul class="data-buttons table-options flex justify-start my-1">
            <li><button class="fetch-view-btn btn btn-primary mr-10 shadow-lg">Refresh</button></li>
            <li><label for="modal" id="fetch-add-btn" class="btn btn-secondary mr-10 shadow-lg modal-button">Add</label></li>
        </ul>
        <table class="table w-full table-compact shadow-xl ">
          <!-- head -->
          <thead>
            <tr>
              <th>Course</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Total Slots</th>
              <th>Open Slots</th>
              <th>Filled Slots</th>
              <th>Type</th>
              <th>Certification Name</th>
              <th>Edit</th>
            </tr>
          </thead>
          <tbody class="fetch-view-results">
            <!-- row 1 -->
            <tr>
                <!-- <th>1</th> -->
                <td><input type="text" placeholder="Course" class="input w-full max-w-xs bg-slate-600"></td>
                <td><input type="text" placeholder="Start Date" class="input w-full max-w-xs bg-slate-600"></td>
                <td><input type="text" placeholder="End Date" class="input w-full max-w-xs bg-slate-600"></td>
                <td><input type="text" placeholder="Total Slots" class="input w-full max-w-xs bg-slate-600"></td>
                <td><input type="text" placeholder="Open Slots" class="input w-full max-w-xs bg-slate-600"></td>
                <td><input type="text" placeholder="Filled Slots" class="input w-full max-w-xs bg-slate-600"></td>
                <td><input type="text" placeholder="Type" class="input w-full max-w-xs bg-slate-600"></td>
                <td><input type="text" placeholder="Certification Name" class="input w-full max-w-xs bg-slate-600"></td>
                <td></td>
            </tr>
          </tbody>
        </table>
      </div>

    <!-- The button to open modal -->

    <!-- Put this part before </body> tag -->
    <input type="checkbox" id="modal" class="modal-toggle" />
    <div class="modal">
        <div class="modal-box relative bg-slate-600">
            <label for="modal" id="view-modal-close-btn" class="btn btn-sm btn-circle absolute right-2 top-2">âœ•</label>
            <h3 class="text-lg font-bold">Training Session</h3>
            <p class="py-4">Update training session records</p>

            <div class="view-modal-body">
                <form action="" class="grid grid-cols-2 gap-2">
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Course</span>
                            <select class="select select-bordered" name="view-course" id="view-course" disabled>

                            </select>
                        </label>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Start Date</span>
                            <input type="date" name="startDate" id="view-startDate" class="input input-bordered" disabled />
                        </label>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>End Date</span>
                            <input type="date" name="endDate" id="view-endDate" class="input input-bordered" disabled />
                        </label>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Length</span>
                            <input type="number" name="courseLength" id="view-courseLength" class="input input-bordered" disabled />
                        </label>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Scheduled Dates</span>
                        </label>
                        <div id="view-scheduledDates"></div>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Total Slots</span>
                            <input type="number" name="totalSlots" id="view-totalSlots" class="input input-bordered" disabled />
                        </label>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Open Slots</span>
                            <input type="number" name="openSlots" id="view-openSlots" class="input input-bordered" disabled />
                        </label>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Filled Slots</span>
                            <input type="number" name="filledSlots" id="view-filledSlots" class="input input-bordered" disabled />
                        </label>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Type</span>
                            <input type="text" name="type" id="view-type" class="input input-bordered" disabled />
                        </label>
                    </div>
                    <div class="form-control mb-3">
                        <label class="input-group input-group-vertical">
                            <span>Certification Name</span>
                            <select class="select select-bordered" name="view-certificationName" id="view-certificationName" disabled>

                            </select>
                        </label>
                    </div>
                    <label for="modal" class="btn hidden col-span-2" id="form-submit">Submit New Training Session</label>
                    <button class="btn view-edit-btn">Edit</button>
                    <label for="modal" class="btn view-edit-confirm-btn hidden">Confirm Edit</label>
                    <label for="modal" class="btn view-delete-btn">Delete</label>
                   
                </form>
            </div>
        </div>
    </div>
    <%- include("../../partials/footer.ejs") %>

    <script type="module" src="../js/session.js"></script>
    
</body>
</html>